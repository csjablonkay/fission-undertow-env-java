FROM maven:3.5-jdk-8 as BUILD
COPY dep/fission-undertow-java-core/src /usr/src/mydep/src
COPY dep/fission-undertow-java-core/pom.xml /usr/src/mydep
COPY src /usr/src/myapp/src
COPY pom.xml /usr/src/myapp
RUN mvn -f /usr/src/mydep/pom.xml clean package
RUN mvn -f /usr/src/myapp/pom.xml clean package

FROM openjdk:8-jdk-alpine
VOLUME /tmp
COPY --from=BUILD /usr/src/myapp/target/undertow-env-java-1.0.0-SNAPSHOT-shaded.jar /app.jar
ENTRYPOINT java ${JVM_OPTS} -Djava.security.egd=file:/dev/./urandom -jar /app.jar
EXPOSE 8888